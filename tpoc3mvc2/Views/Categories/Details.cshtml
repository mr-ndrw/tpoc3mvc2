@model tpoc3mvc2.Models.Categories
@{
    ViewBag.Title = "Details";
}
<div class="row">
    <h1><span class="glyphicon glyphicon-tag"></span> @Html.DisplayFor(model => model.Name)</h1>
    <hr/>
    <h3>Books written in that category:</h3>
    <table class="table table-condensed">
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>
                    @Html.ActionLink(book.Title, "Details", "Books", new { id = book.Id }, null)
                </td>
                <td>
                    @foreach (var author in book.Authors)
                {
                        @Html.ActionLink(author.Title, "Details", "Authors", new { id = author.Id }, null)
                        if (book.Authors.Last() != author)
                        {
                            @Html.Raw(", ")
                        }
                    }
                </td>
            </tr>
        }
    </table>
</div>

